@model Salvation.Models.Usuario

@{
    ViewData["Title"] = "Reativar Usuário";
}

<h2>Confirmar reativação</h2>

<p>Deseja reativar o usuário <strong>@Model.Nome</strong>?</p>

<form asp-action="AtivarUsuarioConfirm" asp-route-id="@Model.IdUsuario" method="post">
    <button type="submit" class="btn btn-outline-success">Confirmar</button>
    <a asp-action="Inativos" class="btn btn-outline-secondary">Cancelar</a>
</form>
