@using System.Security.Claims
<!-- Importa ClaimTypes para ler Role/Name do usuário logado -->

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Salvation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap e CSS do site -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="m-0 bg-dark text-light">
    @{
        // Lê a role do usuário autenticado (via Claims)
        var role = User.FindFirst(ClaimTypes.Role)?.Value ?? "Outros";
        // Escolhe avatar conforme a role
        var avatar = role switch
        {
            "Administrador" => "avatar-admin.png",
            "Gerente" => "avatar-gerente.png",
            _ => "avatar-outros.png"
        };
    }

    <!-- Navbar no topo -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom shadow-sm">
        <div class="container-fluid">
            <!-- Avatar + nome -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/img/@avatar" width="40" height="40"
                     class="rounded-circle me-2 border border-light" alt="Avatar" />
                <span>
                    <strong>@User.Identity?.Name</strong><br />
                    <small class="text-secondary">@role</small>
                </span>
            </a>

            <!-- Botão de menu mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar"
                    aria-controls="topNavbar" aria-expanded="false" aria-label="Alternar navegação">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="topNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Início</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Filme" asp-action="Index">🎬 Filmes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Index">👥 Usuários</a></li>

                    @if (User.IsInRole("Administrador") || User.IsInRole("Gerente"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Genero" asp-action="Index">📂 Gêneros</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Classificacao" asp-action="Index">🧷 Classificações</a></li>
                    }

                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Inativos">🧟‍♂️ Inativos</a></li>
                    }

                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="Usuario" asp-action="Logout">🚪 Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Conteúdo -->
    <main class="container-fluid p-4 main-content">
        @RenderBody()
    </main>

    <footer class="text-center text-muted small py-2 bg-black">
        &copy; 2025 - Salvation 🦇
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
